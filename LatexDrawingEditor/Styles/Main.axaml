<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Design.PreviewWith>
        <Border Padding="20">
            <!-- Add Controls for Previewer Here -->
        </Border>
    </Design.PreviewWith>
	
	<Style Selector="StackPanel.ToolMenu">
		<Setter Property="Background" Value="{DynamicResource ThemePrimaryBackgroundBrush}"/>
	</Style>

	<Style Selector="Menu.Toolbar">
		<Setter Property="Background" Value="{DynamicResource ThemeSecondaryBackgroundBrush}"/>
	</Style>
	

	<Style Selector="Button.ToolMenu__btn">
		<Setter Property="Margin" Value="5"/>
		<Setter Property="Width" Value="40" />
		<Setter Property="Height" Value="40" />
	</Style>
	
</Styles>
